<div class="row">
  <li><strong><%= f.object.question.content %></strong></li>
  <% f.object.question.answers.each do |answer| %>
    <label class="radio">
      <%= f.radio_button :answer_id, answer.id,
        disabled: f.object.exam.uncheck? or f.object.exam.checked? %>
      <% if answer.correct? %>
        <span class="glyphicon glyphicon-ok text-success"></span>
      <% else %>
        <span class="glyphicon glyphicon-remove text-danger"></span>
      <% end %>
      <%= answer.content %>
    </label>
  <% end %>
  </br>
</div>
