<% provide:title, t("admin.subject.new") %>
  <h1><%= t "admin.subject.new" %></h1>
  <div class="row content">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for [:admin, @subject] do |f| %>
        <div class="field">
          <%= f.label :name %><br/>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :description %><br/>
          <%= f.text_field :description %>
        </div>

        <%= f.submit t("admin.subject.new"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
