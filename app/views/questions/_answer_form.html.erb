<div class="panel panel-info fields">
  <div class="panel-body">
    <%= f.text_area :content, class: "form-control word_content" %>
    <%= f.check_box :correct, class: "radio_answer" %>
    <%= f.label :correct, t(".correct"),
      class: "correct_answer" %>
    <%= link_to_remove_fields raw("<span class='glyphicon glyphicon-remove-circle'></span>"),
      f %>
  </div>
</div>
