<div class="container">
  <div class="row" id="question">
    <span>
      <h2><%= link_to t(".new_q"), new_question_path,
        class: "link-text-question glyphicon glyphicon-plus" %></h2>
      <h1><%= t ".title" %></h1>
    </span>
    <div id="form">
    <span class="glyphicon glyphicon-search", id="search"></span>
      <div id= "form_search">
        <%= search_form_for @search, class: "form-inline" do |f| %>
          <div class="form-group">
            <%= f.label :state %>
            <%= f.search_field :state_cont, class: "form-control" %><br/>
          </div>

           <%= f.submit t("views.user.search"), class: "btn btn-sm btn-primary" %>
        <% end %>
      </div>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= t ".stt" %></th>
          <th><%= t ".question" %></th>
          <th><%= t ".subject" %></th>
          <th><%= t ".question_type" %></th>
          <th><%= t ".state" %></th>
          <th><%= t ".action" %></th>
        </tr>
      </thead>
      <% @questions.each_with_index do |question, index| %>
        <tbody>
          <tr class="success">
            <td><%= index %></td>
            <div class="truncate"><td><%= question.content %></td></div>
            <td><%= question.subject.name %></td>
            <td><%= question.question_type %></td>
            <td ><span class="btn btn-warning"><%= question.state %></span</td>
            <td>
              <%= link_to "", "#",
                class: "glyphicon glyphicon-edit icon-padding link-underline" %>
              <%= link_to "", question_path(question), method: :delete,
                data: {confirm: t(".confirm")},
                  class: "glyphicon glyphicon-trash icon-padding link-underline text-danger" %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= paginate @questions %>
  </div>
</div>
